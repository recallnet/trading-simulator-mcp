{
  "name": "trading-simulator-mcp",
  "version": "0.1.0",
  "description": "MCP server for Trading Simulator operations",
  "main": "dist/index.js",
  "type": "module",
  "bin": "./dist/index.js",
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "husky",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "format": "prettier --write .",
    "lint": "eslint .",
    "docs": "typedoc --entryPoints src/index.ts",
    "test": "mocha --require ts-node/register 'test/**/*.test.ts' --exit",
    "coverage": "c8 --check-coverage --lines 85 --functions 80 --branches 70 --include src/api-client.ts --include src/env.ts --include src/types.ts mocha --require ts-node/register 'test/**/*.test.ts' --exit",
    "coverage:report": "c8 report --reporter=text-lcov > coverage/lcov.info"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": "prettier --write",
    "*.{ts,js}": "eslint"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.0.1",
    "chalk": "^5.4.1",
    "dotenv": "^16.3.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/chai": "^5.2.1",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/sinon": "^17.0.4",
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-turbo": "^2.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "mocha": "^11.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "shx": "^0.4.0",
    "sinon": "^20.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.0",
    "typedoc": "^0.28.3",
    "typedoc-plugin-coverage": "^4.0.1",
    "typedoc-plugin-markdown": "^4.6.2",
    "typedoc-plugin-missing-exports": "^4.0.0",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.31.0"
  }
}
